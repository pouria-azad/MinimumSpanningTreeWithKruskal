@model IEnumerable<MinimumSpanningTreeWithKruskal.Models.Graph>
@{
    ViewData["Title"] = "تاریخچه گراف‌های من";
}

<h2 class="mb-4">تاریخچه گراف‌های من</h2>
<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-primary">
            <tr>
                <th>نام گراف</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var graph in Model)
        {
            <tr>
                <td>@graph.Name</td>
                <td>
                    <a asp-action="Show" asp-route-graphId="@graph.Id" class="btn btn-outline-primary btn-sm me-2">
                        <i class="bi bi-eye"></i> مشاهده گراف
                    </a>
                    <form method="post" action="@Url.Action("Delete", "Graph")" style="display:inline;">
                        <input type="hidden" name="graphId" value="@graph.Id" />
                        <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('آیا از حذف این گراف مطمئن هستید؟');">
                            <i class="bi bi-trash"></i> حذف
                        </button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div> 